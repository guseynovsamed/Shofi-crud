@model CategoryEditVM


<div class="container mt-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">Category Name</label>
            <div class="col-md-12 mt-2">
                <input asp-for="Name" type="text" maxlength="100" placeholder="Write product name..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>


            <label class="mt-3" style="font-weight:700">Category Images</label>
            <div class="form-group">
                <label asp-for="NewImage"></label>
                <input class="form-control" asp-for="NewImage" />
                <span class="text-danger" asp-validation-for="NewImage"></span>
            </div>
            <div class="row">
                <div class="col">
                    <a target="_blank" data-type="image" href="~/img/@Model.Image">
                        <img style="object-fit:contain; width:250px; height:250px; margin: auto; border:3px solid black" class="rounded-4 fit" src="~/admin/assets/images/@Model.Image" />
                    </a>
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success text-color-white">Submit</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>